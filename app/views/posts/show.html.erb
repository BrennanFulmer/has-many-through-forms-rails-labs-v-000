<% # binding.pry # rspec spec/features/posts_spec.rb %>

<%= @post.title %>

<%= @post.content %>

<% @post.comments.each do |comment| %>
  <%= comment.content %>
<% end %>

<% @post.commenters.each do |commenter| %>
  <%= link_to commenter.username, user_path(commenter) %>
<% end %>

# comment form - dropdown to select user, can create one

# https://apidock.com/rails/ActionView/Helpers/FormOptionsHelper/collection_select

<%= form_for @post.comments.build do |f| %>
  <%= f.hidden_field :post_id %>

  <%= f.label :content %>
  <br>
  <%= f.text_field :content %>
  <br>

  <%= f.collection_select :user_id, User.all, :id, :username, :include_blank %>
  <br>
  
  <%= f.fields_for :user, @post.comments.last.build_user do |user_fields| %>
    <%= user_fields.label :username %>
    <br>
    <%= user_fields.text_field :username %>
    <br>
    <%= f.label :email %>
    <br>
    <%= user_fields.email_field :email %>
  <% end %>
  
  <br>
  <%= f.submit %>
<% end %>

